<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.entities.EmpleadosEntity" table="empleados" schema="public" catalog="empleados">
        <id name="empno" column="empno"/>
        <property name="nombre" column="nombre"/>
        <property name="puesto" column="puesto"/>
        <property name="depno" column="depno"/>
        <many-to-one name="departamentosByDepno" class="org.example.entities.DepartamentosEntity">
            <column name="depno" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>